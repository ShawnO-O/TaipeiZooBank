<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clAreaListMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="18dp"
    android:paddingTop="12dp"
    android:paddingRight="18dp">

    <ImageView
        android:id="@+id/imgAreaListIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/personalitytest_no_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAreaListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvAreaListContent"
        app:layout_constraintEnd_toStartOf="@+id/ivAreaListNextArrow"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgAreaListIcon"
        app:layout_constraintTop_toTopOf="@+id/imgAreaListIcon" />

    <TextView
        android:id="@+id/tvAreaListContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tvAreaListCloseInfo"
        app:layout_constraintEnd_toStartOf="@+id/ivAreaListNextArrow"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvAreaListTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvAreaListTitle" />

    <TextView
        android:id="@+id/tvAreaListCloseInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgAreaListIcon"
        app:layout_constraintEnd_toEndOf="@+id/tvAreaListContent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvAreaListTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvAreaListContent" />

    <ImageView
        android:id="@+id/ivAreaListNextArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/baseline_navigate_next_black_18"
        app:layout_constraintBottom_toBottomOf="@+id/imgAreaListIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgAreaListIcon" />

    <View
        android:id="@+id/viewBottomLine"
        style="@style/hr_line_s"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAreaListIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>